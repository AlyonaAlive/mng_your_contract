<!DOCTYPE html>
<html>
<head>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,700,300,600,800,400' rel='stylesheet' type='text/css'>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="header" id="header">
            <div class="container">
                <div class="header-logo">
                    <a><img src="/Content/images/logo.png" alt="" /></a>
                </div>              
                <div class="top-nav">
                        <ul>
                            <li>@Html.ActionLink("Manager", "Index", "Manager")</li>
                            <li>@Html.ActionLink("Client", "Index", "Client")</li>
                            <li>@Html.ActionLink("Employee", "Index", "Employee")</li>
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>                
                </div>
                <div class="top-login">
                @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div >

            
                        @RenderBody()
                  
            
            <hr />
            <footer class='footer'>
                <p>&copy; @DateTime.Now.Year - MngYourContract</p>
            </footer>
        </div>


   
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
